{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen bg-gray-50 py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

            <!-- Header -->
            <header class="text-center mb-16">
                <h1 class="text-4xl font-bold text-gray-900 mb-2">Welcome to Your Recipe Library</h1>
                <p class="text-gray-600 text-lg">Explore our curated collection of recipes and plan your next meal with confidence.</p>
            </header>

            <!-- Featured Recipes Section -->
            <section class="mb-20">
                <h2 class="text-2xl font-semibold text-gray-800 mb-6">Featured Recipes</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
                    {% for recipe in recipes|slice(0,3) %}
                        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                            <img src="{{ recipe.images }}" alt="{{ recipe.title }}" class="w-full h-56 object-cover">
                            <div class="p-6">
                                <h3 class="text-xl font-semibold text-gray-900 mb-2">{{ recipe.title }}</h3>
                                <p class="text-gray-600 text-sm">A short description or tagline for the recipe goes here to give users a quick idea.</p>
                                <div class="mt-4">
                                    <a href="#" class="inline-block text-sm font-medium text-white bg-gray-800 hover:bg-gray-900 rounded-md px-4 py-2 transition">View Recipe</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>

            <!-- All Recipes Grid -->
            <section>
                <h2 class="text-2xl font-semibold text-gray-800 mb-6">All Recipes</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    {% for recipe in recipes %}
                        <a href="#" class="group block bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden">
                            <div class="relative pb-2/3">
                                <img src="{{ recipe.images }}" alt="{{ recipe.title }}" class="absolute h-full w-full object-cover group-hover:scale-105 transition-transform duration-300">
                            </div>
                            <div class="p-4">
                                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-gray-700 transition-colors duration-300">{{ recipe.title }}</h3>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </section>

        </div>
    </div>

    <style>
        /* Maintain uniform aspect ratio for grid images */
        .pb-2/3 {
            padding-bottom: 66.6667%;
        }
    </style>
{% endblock %}
