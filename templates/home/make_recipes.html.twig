{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center py-8 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-2xl bg-white p-8 rounded-2xl shadow-2xl border border-gray-200 space-y-6">

            <!-- Header -->
            <div class="flex flex-col items-center space-y-2">
                <div class="h-12 w-12 rounded-full bg-blue-600 flex items-center justify-center text-white text-xl font-bold">
                    üç≥
                </div>
                <h2 class="text-2xl font-bold text-gray-900">Make a New Recipe</h2>
                <p class="text-gray-500 text-sm text-center">
                    Fill out the details below to add your recipe
                </p>
            </div>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div class="space-y-4">
                <!-- Title -->
                <div>
                    <label class="block text-gray-700 font-medium mb-1" for="{{ form.title.vars.id }}">Title</label>
                    {{ form_widget(form.title, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                    {{ form_errors(form.title, {'attr': {'class': 'text-red-600 text-xs mt-1'}}) }}
                </div>

                <!-- Description -->
                <div>
                    <label class="block text-gray-700 font-medium mb-1" for="{{ form.description.vars.id }}">Description</label>
                    {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500', 'rows': 4}}) }}
                    {{ form_errors(form.description, {'attr': {'class': 'text-red-600 text-xs mt-1'}}) }}
                </div>

                <!-- Prep & Cook Time -->
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-gray-700 font-medium mb-1" for="{{ form.prepTimeMin.vars.id }}">Prep Time (min)</label>
                        {{ form_widget(form.prepTimeMin, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                        {{ form_errors(form.prepTimeMin, {'attr': {'class': 'text-red-600 text-xs mt-1'}}) }}
                    </div>
                    <div>
                        <label class="block text-gray-700 font-medium mb-1" for="{{ form.cookTimeMin.vars.id }}">Cook Time (min)</label>
                        {{ form_widget(form.cookTimeMin, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                        {{ form_errors(form.cookTimeMin, {'attr': {'class': 'text-red-600 text-xs mt-1'}}) }}
                    </div>
                </div>

                <!-- Servings & Difficulty -->
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-gray-700 font-medium mb-1" for="{{ form.servings.vars.id }}">Servings</label>
                        {{ form_widget(form.servings, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                        {{ form_errors(form.servings, {'attr': {'class': 'text-red-600 text-xs mt-1'}}) }}
                    </div>
                    <div>
                        <label class="block text-gray-700 font-medium mb-1" for="{{ form.difficulty.vars.id }}">Difficulty</label>
                        {{ form_widget(form.difficulty, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                        {{ form_errors(form.difficulty, {'attr': {'class': 'text-red-600 text-xs mt-1'}}) }}
                    </div>
                </div>

                <!-- Image Upload -->
                <div>
                    <label class="block text-gray-700 font-medium mb-1" for="{{ form.images.vars.id }}">Upload Image</label>
                    {{ form_widget(form.images, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                    {{ form_errors(form.images, {'attr': {'class': 'text-red-600 text-xs mt-1'}}) }}
                    <p class="text-gray-400 text-xs mt-1">Images will be stored in public/uploads/recipes</p>
                </div>

                <!-- Categories Dropdown -->
                <div>
                    <label class="block text-gray-700 font-medium mb-1" for="{{ form.categories.vars.id }}">Category</label>
                    {{ form_widget(form.categories, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                    {{ form_errors(form.categories, {'attr': {'class': 'text-red-600 text-xs mt-1'}}) }}
                </div>

                <!-- Tags Multi-Select -->
                <div>
                    <label class="block text-gray-700 font-medium mb-1" for="{{ form.recipeTags.vars.id }}">Tags</label>
                    {{ form_widget(form.recipeTags, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500', 'multiple': true}}) }}
                    {{ form_errors(form.recipeTags, {'attr': {'class': 'text-red-600 text-xs mt-1'}}) }}
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit"
                    class="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-md shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-150 mt-4">
                Save Recipe
            </button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}