{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-2xl shadow-lg p-8 w-full max-w-md text-center">

            <!-- Profile Picture -->
            <div class="flex justify-center mb-4">
                {% if app.user.profilePicture %}
                    <img src="{{ asset('uploads/profilePictures/' ~ app.user.profilePicture) }}"
                         alt="{{ app.user.firstName }}'s Profile Picture"
                         class="w-32 h-32 rounded-full object-cover border-4 border-blue-400">
                {% else %}
                    <img src="{{ asset('img/default-avatar-profile-vector-user-profile.webp') }}"
                         alt="Default Profile Picture"
                         class="w-32 h-32 rounded-full object-cover border-4 border-blue-400">
                {% endif %}
            </div>

            <!-- User Name -->
            <h2 class="text-2xl font-bold text-gray-900 mb-2">
                {{ app.user.firstName }} {{ app.user.lastName }}
            </h2>

            <!-- Email -->
            <p class="text-gray-500 mb-6">{{ app.user.email }}</p>

            <!-- Action Buttons -->
            <div class="flex justify-center gap-4">
                <a href="{{ path('app_profile') }}"
                   class="px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg shadow transition">
                    Edit Profile
                </a>
                <a href="{{ path('app_change_password') }}"
                   class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded-lg shadow transition">
                    Change Password
                </a>
            </div>

        </div>
    </div>
{% endblock %}
