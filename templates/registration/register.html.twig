{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-blue-50 py-8 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-sm bg-white p-8 rounded-xl shadow-md border border-gray-200 space-y-6">

            <!-- Avatar / Logo -->
            <div class="flex justify-center mb-2">
                <div class="h-12 w-12 rounded-full bg-green-600 flex items-center justify-center text-white text-xl font-bold">
                    üìù
                </div>
            </div>

            <!-- Title -->
            <h2 class="text-center text-2xl font-bold text-gray-900 mb-2">
                Create your account
            </h2>
            <p class="text-center text-sm text-gray-600 mb-4">
                Already have an account?
                <a href="{{ path('app_login') }}" class="text-blue-600 hover:underline">Sign in</a>
            </p>

            <!-- Form -->
            {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}">

            <!-- First Name -->
            <div class="relative">
                {{ form_widget(registrationForm.firstName, {'attr': {'class': 'peer placeholder-transparent w-full px-3 py-2 border border-gray-300 rounded-md text-gray-900 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500', 'placeholder': 'First Name'}}) }}
                {{ form_label(registrationForm.firstName, 'First Name', {'attr': {'class': 'absolute left-3 top-2 text-gray-400 text-sm transition-all peer-placeholder-shown:top-2 peer-placeholder-shown:text-gray-400 peer-placeholder-shown:text-sm peer-focus:top-[-0.5rem] peer-focus:text-green-500 peer-focus:text-xs bg-white px-1'}}) }}
                {{ form_errors(registrationForm.firstName, {'attr': {'class': 'text-red-600 text-xs mt-1'}}) }}
            </div>

            <!-- Last Name -->
            <div class="relative">
                {{ form_widget(registrationForm.lastName, {'attr': {'class': 'peer placeholder-transparent w-full px-3 py-2 border border-gray-300 rounded-md text-gray-900 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500', 'placeholder': 'Last Name'}}) }}
                {{ form_label(registrationForm.lastName, 'Last Name', {'attr': {'class': 'absolute left-3 top-2 text-gray-400 text-sm transition-all peer-placeholder-shown:top-2 peer-placeholder-shown:text-gray-400 peer-placeholder-shown:text-sm peer-focus:top-[-0.5rem] peer-focus:text-green-500 peer-focus:text-xs bg-white px-1'}}) }}
                {{ form_errors(registrationForm.lastName, {'attr': {'class': 'text-red-600 text-xs mt-1'}}) }}
            </div>

            <!-- Email -->
            <div class="relative">
                {{ form_widget(registrationForm.email, {'attr': {'class': 'peer placeholder-transparent w-full px-3 py-2 border border-gray-300 rounded-md text-gray-900 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500', 'placeholder': 'Email'}}) }}
                {{ form_label(registrationForm.email, 'Email', {'attr': {'class': 'absolute left-3 top-2 text-gray-400 text-sm transition-all peer-placeholder-shown:top-2 peer-placeholder-shown:text-gray-400 peer-placeholder-shown:text-sm peer-focus:top-[-0.5rem] peer-focus:text-green-500 peer-focus:text-xs bg-white px-1'}}) }}
                {{ form_errors(registrationForm.email, {'attr': {'class': 'text-red-600 text-xs mt-1'}}) }}
            </div>

            <!-- Password -->
            <div class="relative">
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'peer placeholder-transparent w-full px-3 py-2 border border-gray-300 rounded-md text-gray-900 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500', 'placeholder': 'Password'}}) }}
                {{ form_label(registrationForm.plainPassword, 'Password', {'attr': {'class': 'absolute left-3 top-2 text-gray-400 text-sm transition-all peer-placeholder-shown:top-2 peer-placeholder-shown:text-gray-400 peer-placeholder-shown:text-sm peer-focus:top-[-0.5rem] peer-focus:text-green-500 peer-focus:text-xs bg-white px-1'}}) }}
                {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-red-600 text-xs mt-1'}}) }}
            </div>

            <!-- Agree Terms -->
            <div class="flex items-center space-x-2">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded'}}) }}
                {{ form_label(registrationForm.agreeTerms, 'I agree to the terms', {'attr': {'class': 'text-gray-900 text-sm'}}) }}
                {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'text-red-600 text-xs mt-1'}}) }}
            </div>

            <!-- Submit Button -->
            <button type="submit"
                    class="w-full py-2 px-4 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-150">
                Register
            </button>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
