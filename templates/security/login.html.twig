{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-blue-100 via-blue-50 to-white py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-2xl shadow-2xl border border-gray-200">

            <!-- Logo / Avatar -->
            <div class="flex justify-center">
                <div class="h-16 w-16 rounded-full bg-blue-600 flex items-center justify-center text-white text-2xl font-bold">
                    ðŸ”’
                </div>
            </div>

            {% if error %}
                <div class="bg-red-100 text-red-800 p-3 rounded-md text-sm text-center animate-pulse">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="bg-green-100 text-green-800 p-3 rounded-md text-sm text-center">
                    You are logged in as <strong>{{ app.user.userIdentifier }}</strong>.
                    <a href="{{ path('app_logout') }}" class="underline hover:text-green-600">Logout</a>
                </div>
            {% endif %}

            <div class="text-center">
                <h2 class="mt-2 text-3xl font-extrabold text-gray-900">
                    Sign in to your account
                </h2>
                <p class="mt-2 text-sm text-gray-600">
                    Or <a href="{{ path('app_register') }}" class="font-medium text-blue-600 hover:text-blue-500">create a new account</a>
                </p>
            </div>

            <form method="post" class="mt-8 space-y-6">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="space-y-5">
                    <!-- Email Field -->
                    <div class="relative">
                        <input id="username" name="_username" type="email" value="{{ last_username }}" required
                               class="peer placeholder-transparent w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                               placeholder="Email address">
                        <label for="username" class="absolute left-4 top-3 text-gray-400 text-sm transition-all peer-placeholder-shown:top-3 peer-placeholder-shown:text-gray-400 peer-placeholder-shown:text-sm peer-focus:top-[-0.6rem] peer-focus:text-blue-500 peer-focus:text-xs bg-white px-1">Email address</label>
                    </div>

                    <!-- Password Field -->
                    <div class="relative">
                        <input id="password" name="_password" type="password" required
                               class="peer placeholder-transparent w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                               placeholder="Password">
                        <label for="password" class="absolute left-4 top-3 text-gray-400 text-sm transition-all peer-placeholder-shown:top-3 peer-placeholder-shown:text-gray-400 peer-placeholder-shown:text-sm peer-focus:top-[-0.6rem] peer-focus:text-blue-500 peer-focus:text-xs bg-white px-1">Password</label>
                    </div>
                </div>

                {# Optional Remember Me #}
                {#
                <div class="flex items-center justify-between">
                    <label class="flex items-center space-x-2 text-sm text-gray-600">
                        <input type="checkbox" name="_remember_me" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                        <span>Remember me</span>
                    </label>
                </div>
                #}

                <!-- Submit Button -->
                <button type="submit"
                        class="w-full py-3 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:-translate-y-0.5">
                    Sign in
                </button>
            </form>
        </div>
    </div>
{% endblock %}
