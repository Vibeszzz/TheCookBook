{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen">
        <div class="max-w-lg mx-auto mt-8 bg-white border border-gray-200 rounded-2xl shadow-md p-6">

            <h2 class="text-xl font-semibold text-gray-800 mb-4">Leave a Comment</h2>

            {{ form_start(form, { attr: { class: 'space-y-4' } }) }}

            {# COMMENT TEXTAREA #}
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Your Comment
                </label>

                {{ form_widget(form.content, {
                    attr: {
                        class: 'w-full rounded-lg border border-gray-300 bg-white text-gray-900 focus:ring-blue-500 focus:border-blue-500 shadow-sm p-2.5 text-sm',
                        placeholder: 'Write your comment here...'
                    }
                }) }}

                {{ form_errors(form.content) }}
            </div>

            {# HIDDEN recipe field #}
            <div class="hidden">
                {{ form_widget(form.recipeComments) }}
            </div>

            {# SUBMIT BUTTON #}
            <div class="text-right">
                <button type="submit"
                        class="px-4 py-2 bg-gradient-to-br from-green-400 to-blue-600 text-white font-medium rounded-lg shadow hover:from-green-500 hover:to-blue-700 transition">
                    Post Comment
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
